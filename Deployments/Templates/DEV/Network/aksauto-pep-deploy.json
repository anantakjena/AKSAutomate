{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "privateEndpointName": {
            "type": "string"
        },
        "privateEndpointConnectionName": {
            "type": "string"
        },
        "pepResourceType": {
            "type": "string"
        },
        "pepResourceName": {
            "type": "string"
        },
        "vnetName": {
            "type": "string"
        },
        "subnetName": {
            "type": "string"
        },
        "subResourceId": {
            "type": "string"
        }
    },
    "variables": {       
        "privateLinkServiceId": "[resourceId(parameters('pepResourceType'), parameters('pepResourceName'))]"
  },
    "resources": [
        {
            "apiVersion": "2019-04-01",
            "name": "[parameters('privateEndpointName')]",
            "type": "Microsoft.Network/privateEndpoints",
            "location": "[resourceGroup().Location]",
            "properties": {
                "privateLinkServiceConnections": [
                    {
                        "name": "[parameters('privateEndpointConnectionName')]",
                        "properties": {
                            "privateLinkServiceId": "[variables('privateLinkServiceId')]",
                            "groupIds": [
                                "[parameters('subResourceId')]"
                            ]
                        }
                    }                    
                ],
                "manualPrivateLinkServiceConnections": [],
                "subnet": {
                    "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('subnetName') )]"
                }
            }
        }
    ],
    "outputs": {
    }
}